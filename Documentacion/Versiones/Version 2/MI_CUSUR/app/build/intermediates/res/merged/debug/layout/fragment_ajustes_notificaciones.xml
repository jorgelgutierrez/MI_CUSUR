<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragment_Ajustes_Notificaciones">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona los temas de los que quieres recibir notificaciones"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ajustes_notificaciones_cbdeportes"
        android:checked="false"
        android:text="Deportes"
        android:nestedScrollingEnabled="false"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15dp"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:buttonTint="@color/colorPrimary"
        android:layout_below="@+id/ajustes_notificaciones_cbtecnologia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politica"
        android:id="@+id/ajustes_notificaciones_cbpolitica"
        android:checked="false"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15dp"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:buttonTint="@color/colorPrimary"
        android:layout_below="@+id/ajustes_notificaciones_cbtecnologia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literatura"
        android:id="@+id/ajustes_notificaciones_cbliteratura"
        android:checked="false"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15dp"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:buttonTint="@color/colorPrimary"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/ajustes_notificaciones_cbdeportes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tecnologia"
        android:id="@+id/ajustes_notificaciones_cbtecnologia"
        android:checked="false"
        android:textSize="15dp"
        android:buttonTint="@color/colorPrimary"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recibir Notificaciones"
        android:id="@+id/ajustes_btrecibir_notificaciones"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
