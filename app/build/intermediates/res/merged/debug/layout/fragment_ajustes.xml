<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragment_Ajustes"
    android:background="#FFFFFF">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:id="@+id/textView20"
        android:textColor="@color/colorFondoEncabezado"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona los temas de los que deseas recibir notificaciones oficiales del CUSur"
        android:id="@+id/textView21"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:id="@+id/linear_layout">

        <ListView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/lista_ajustes_temas_notificaciones"
            android:layout_below="@+id/textView20"
            android:divider="@android:color/transparent"
            android:layout_above="@+id/view">
        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar"
            android:background="@color/colorFondoEncabezado"
            android:textColor="@color/colorTextoEncabezado"
            android:id="@+id/ajustes_btrecibir_notificaciones" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Las notificaciones estan asociadas solamente con este dispositivo"
        android:id="@+id/textView22"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/linear_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView22"/>

</RelativeLayout>
