<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@color/colorFondoContenido">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cuenta:"
        android:id="@+id/textView22"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="cuenta"
        android:id="@+id/item_orden_pago_txtcuenta"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Concepto:"
        android:id="@+id/textView23"
        android:layout_row="0"
        android:layout_column="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="concepto"
        android:id="@+id/item_orden_pago_txtconcepto"
        android:layout_alignTop="@+id/textView23"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:layout_row="0"
        android:layout_column="3"
        android:textColor="@color/colorTextoContenido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Descripcion:"
        android:id="@+id/textView26"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="descripcion"
        android:id="@+id/item_orden_pago_txtdescripcion"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_rowSpan="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_orden_pago_txtcuenta"
        android:layout_toRightOf="@+id/item_orden_pago_txtcuenta"
        android:layout_toEndOf="@+id/item_orden_pago_txtcuenta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha:"
        android:id="@+id/textView27"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fecha"
        android:id="@+id/item_orden_pago_txtfecha"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha Vencimiento:"
        android:id="@+id/textView28"
        android:layout_row="4"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView26"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fecha vencimiento"
        android:id="@+id/item_orden_pago_txtvencimiento"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignTop="@+id/textView28"
        android:layout_toRightOf="@+id/textView28"
        android:layout_toEndOf="@+id/textView28"
        android:layout_above="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Monto:"
        android:id="@+id/textView6"
        android:layout_row="5"
        android:layout_column="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_orden_pago_txtfecha"
        android:layout_toLeftOf="@+id/item_orden_pago_txtmonto"
        android:layout_toStartOf="@+id/item_orden_pago_txtmonto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="monto"
        android:layout_row="5"
        android:layout_column="3"
        android:id="@+id/item_orden_pago_txtmonto"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView6"/>
</RelativeLayout>
