<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@color/colorFondoContenido">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NRC:"
        android:id="@+id/textView22"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="nrc"
        android:id="@+id/item_kardex_txtnrc"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Clave:"
        android:id="@+id/textView23"
        android:layout_row="0"
        android:layout_column="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="clave"
        android:id="@+id/item_kardex_txtclave"
        android:layout_row="0"
        android:layout_column="3"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Materia:"
        android:id="@+id/textView26"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtclave"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="materia"
        android:id="@+id/item_kardex_txtmateria"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtnrc"
        android:layout_toRightOf="@+id/item_kardex_txtnrc"
        android:layout_toEndOf="@+id/item_kardex_txtnrc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calificacion:"
        android:id="@+id/textView27"
        android:layout_alignParentStart="true"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtmateria"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="calificacion"
        android:id="@+id/item_kardex_txtcalificacion"
        android:layout_row="2"
        android:layout_column="1"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtmateria"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tipo"
        android:id="@+id/item_kardex_txttipo"
        android:layout_row="2"
        android:layout_column="3"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha:"
        android:id="@+id/textView28"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txttipo"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fecha"
        android:id="@+id/item_kardex_txtfecha"
        android:layout_row="3"
        android:layout_column="1"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView27"
        android:layout_toRightOf="@+id/textView28"
        android:layout_toEndOf="@+id/textView28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calendario:"
        android:id="@+id/textView6"
        android:layout_row="3"
        android:layout_column="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtcalificacion"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="calendario"
        android:layout_row="3"
        android:layout_column="3"
        android:id="@+id/item_kardex_txtcalendario"
        android:textColor="@color/colorTextoContenido"
        android:layout_above="@+id/item_kardex_txtcreditos"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tipo:"
        android:id="@+id/textView7"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorTextoContenido"
        android:layout_alignTop="@+id/item_kardex_txtcalificacion"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Creditos:"
        android:id="@+id/textView8"
        android:layout_row="4"
        android:layout_column="1"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/item_kardex_txtcalendario"
        android:layout_toLeftOf="@+id/item_kardex_txtcreditos"
        android:layout_toStartOf="@+id/item_kardex_txtcreditos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="creditos"
        android:id="@+id/item_kardex_txtcreditos"
        android:layout_row="4"
        android:layout_column="2"
        android:textColor="@color/colorTextoContenido"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
