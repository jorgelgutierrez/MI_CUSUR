<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio_Sesion"
    android:background="@color/colorLoginFondoContenido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondoBannerInicio">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:src="@drawable/app_banner"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/inicio_TXTCodigo"
                    android:textStyle="bold"
                    android:textColor="@color/colorLoginTextoContenido"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:backgroundTint="@color/colorLoginTextoContenido"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:maxLength="9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/inicio_login_codigo"
                    android:typeface="serif"
                    android:id="@+id/inicio_lblcodigo"
                    android:textColor="@color/colorLoginTextoContenido"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/inicio_TXTNip"
                    android:paddingTop="50dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLoginTextoContenido"
                    android:textAlignment="center"
                    android:backgroundTint="@color/colorLoginTextoContenido"
                    android:layout_gravity="center_horizontal"
                    android:maxLength="10"
                    android:ems="10"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/inicio_login_nip"
                    android:typeface="serif"
                    android:id="@+id/inicio_lblnip"
                    android:textStyle="bold"
                    android:textColor="@color/colorLoginTextoContenido"
                    android:layout_below="@+id/inicio_TXTCodigo"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inicio_BTIniciar_sesion"
                    android:background="@mipmap/ic_app_login"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp" />

            </LinearLayout>
        </ScrollView>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayuda"
            android:visibility="invisible"
            android:textColor="#000000"
            android:id="@+id/inicio_BTAyuda"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#005b0909" />
    </LinearLayout>

</LinearLayout>
